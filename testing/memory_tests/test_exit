#!/bin/zsh
diffFile=test_exit.diff
memFile=test_exit.mem
pass=true
run_cmd() {
    #echo Processing Command: $1
    echo Processing Command: $1 >>& $diffFile >>& $memFile
    grep exit <(../../shell <<< $1 2>&1) >>& $diffFile
    check $1 $?
}
check() {
    if [ $2 -ne 0 ] 
    then
        echo -e "\033[1;31m Failed to run $1\033[0m"
        pass=false
    else
        grep -E "lost: [1-9]" <(valgrind --show-leak-kinds=all --leak-check=full --track-origins=yes ../../shell  <<< $1 2>&1) >>& $memFile
        if [ $? -eq 0 ]
        then
            pass=false
            echo -e "\033[1;31m Failed to run $1\033[0m"
        else
        echo -e "\033[1;32m $1 ran successfully\033[0m"
        fi
    fi
}
echo -e "\033[1;4;93m\ttest exit\033[0m"
echo -e "\033[1;4;93m\ttest exit\033[0m" > $diffFile > $memFile
input_str=$'exit'
run_cmd $input_str
if [ $pass = true ]
then
    exit 0
else
    exit 1
fi
